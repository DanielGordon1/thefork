<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2>Please create a review for <%= @restaurant.name %></h2>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
